<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="131dp"
        android:layout_height="42dp"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="Time: 15"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="413dp"
        android:layout_height="447dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/kenny1"
            android:layout_width="125dp"
            android:layout_height="133dp"
            android:layout_margin="5dp"
            android:onClick="Click"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/kenny"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/kenny2"
            android:layout_width="125dp"
            android:layout_height="133dp"
            android:layout_margin="5dp"
            android:onClick="Click"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/kenny"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/kenny3"
            android:layout_width="125dp"
            android:layout_height="133dp"
            android:layout_margin="5dp"
            android:onClick="Click"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/kenny"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/kenny4"
            android:layout_width="125dp"
            android:layout_height="133dp"
            android:layout_margin="5dp"
            android:onClick="Click"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/kenny"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/kenny5"
            android:layout_width="125dp"
            android:layout_height="133dp"
            android:layout_margin="5dp"
            android:onClick="Click"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/kenny"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/kenny6"
            android:layout_width="125dp"
            android:layout_height="133dp"
            android:layout_margin="5dp"
            android:onClick="Click"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/kenny"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/kenny7"
            android:layout_width="125dp"
            android:layout_height="133dp"
            android:layout_margin="5dp"
            android:onClick="Click"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/kenny"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/kenny8"
            android:layout_width="125dp"
            android:layout_height="133dp"
            android:layout_margin="5dp"
            android:onClick="Click"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/kenny"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/kenny9"
            android:layout_width="125dp"
            android:layout_height="133dp"
            android:layout_margin="5dp"
            android:onClick="Click"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/kenny"
            tools:ignore="SpeakableTextPresentCheck" />
    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="159dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Score:"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
</androidx.constraintlayout.widget.ConstraintLayout>